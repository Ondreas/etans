{
    "name": "11ty-membership-site",
    "version": "0.1.0",
    "description": "An Eleventy theme for offering premium content to members. Requires Supabase and Netlify accounts.",
    "main": "index.html",
    "scripts": {
        "watch:sass": "sass  --no-source-map --watch src/sass:public/css",
        "watch:eleventy": "eleventy --serve",
        "build:sass": "sass  --no-source-map src/sass:public/css",
        "build:eleventy": "eleventy",
        "postbuild": "lightningcss --minify public/css/style.css -o public/css/style.min.css",
        "start": "npm-run-all build:sass --parallel watch:*",
        "build": "npm-run-all build:sass build:eleventy"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/5t3ph/11ty-membership-site.git"
    },
    "author": "5t3ph",
    "license": "ISC",
    "dependencies": {
        "@11ty/eleventy": "^2.0.1",
        "lightningcss-cli": "^1.19.0",
        "npm-run-all": "^4.1.5",
        "sass": "^1.60.0"
    },
    "browserslist": [
        "> 0.25%",
        "not IE 11"
    ]
}
